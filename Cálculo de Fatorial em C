#include <stdio.h>

int main()
{
    float num;
    int resultado=1;
    printf("Escolha um Número Inteiro para se calcular o fatorial:");
    scanf("%f", &num);
    while(num != (int)num || num<0)
     {
       printf("Número Inválido.Por Favor insira novo número:");
       scanf("%f", &num);
     }
     if (num!=0)
     {
     for (;num>0;num--)
      resultado*=num;
    printf("O fatorial desse número é:%d",resultado);  
      }
      else 
      printf(" O fatorial desse número é: 1");
     
     
     
    return 0;
}
